<div class="card-item col">
  <a href="{% if keynote.redirect %}{{ keynote.redirect }}{% else %}{{ keynote.url | relative_url }}{% endif %}">
    <div class="card hoverable">
      <div class="row g-0">
        {% if keynote.img %}
          <div class="card-img col-md-12">
            {% include figure.liquid loading="eager" path=keynote.img sizes="(min-width: 768px) 156px, 50vw" alt="Photo of the keynote speaker" %}
          </div>
        {% endif %}
        <div class="{% if keynote.img %}col-md-12{% else %}col-md-12{% endif %}">
          <div class="card-body">
            <h3 class="card-title">{{ keynote.name }} {{ keynote.surname }}</h3>
            <p class="card-text">{{ keynote.affiliation }}</p>
            <p class="card-text">{{ keynote.title }}</p>
            <div class="row ml-1 mr-1 p-0">
              {% if keynote.github %}
                <div class="github-icon">
                  <div class="icon" data-toggle="tooltip" title="Code Repository">
                    <a href="{{ keynote.github }}"><i class="fa-brands fa-github gh-icon"></i></a>
                  </div>
                  {% if keynote.github_stars %}
                    <span class="stars" data-toggle="tooltip" title="GitHub Stars">
                      <i class="fa-solid fa-star"></i>
                      <span id="{{ keynote.github_stars }}-stars"></span>
                    </span>
                  {% endif %}
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </a>
</div>
